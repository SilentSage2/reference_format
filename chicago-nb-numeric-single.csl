<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0" class="numeric" default-locale="en-US">
  <info>
    <title>Chicago Notesâ€“Bibliography (numeric, single spaced, with [1] in-text)</title>
    <id>http://www.zx-custom.org/styles/chicago-nb-numeric-single</id>
    <link href="http://www.chicagomanualofstyle.org/" rel="documentation"/>
    <author>
      <name>Custom CSL by ChatGPT</name>
    </author>
    <category citation-format="numeric"/>
    <category field="generic-base"/>
    <updated>2025-10-30T00:00:00+00:00</updated>
  </info>

  <macro name="author-bib">
    <names variable="author" delimiter=", ">
      <name and="text" delimiter=", " initialize-with="." name-as-sort-order="first"/>
      <et-al term="et-al"/>
    </names>
  </macro>

  <macro name="issued-year">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <macro name="title-quoted">
    <text variable="title" quotes="true"/>
  </macro>

  <macro name="container-italic">
    <text variable="container-title" font-style="italic"/>
  </macro>

  <macro name="volume-issue-year-pages">
    <group delimiter=" ">
      <group>
        <text variable="volume"/>
        <group prefix=", no. ">
          <text variable="issue"/>
        </group>
      </group>
      <group prefix=" (" suffix="):">
        <text macro="issued-year"/>
      </group>
      <text variable="page"/>
    </group>
  </macro>

  <macro name="publisher-place">
    <group delimiter=": ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>

  <macro name="access">
    <choose>
      <if variable="DOI">
        <text variable="DOI" prefix="https://doi.org/"/>
      </if>
      <else-if variable="URL">
        <text variable="URL"/>
      </else-if>
    </choose>
  </macro>

  <!-- In-text citations like [1], [2-3] -->
  <citation collapse="citation-number">
    <layout prefix="[" suffix="]" delimiter=", ">
      <text variable="citation-number"/>
    </layout>
  </citation>

  <!-- Bibliography section -->
  <bibliography et-al-min="11" et-al-use-first="7" hanging-indent="true" entry-spacing="0" line-spacing="1">
    <sort>
      <key macro="author-bib"/>
      <key macro="issued-year" sort="ascending"/>
      <key variable="title"/>
    </sort>
    <layout suffix=".">
      <text variable="citation-number" suffix=". "/>
      <choose>
        <if type="article-journal article-magazine article-newspaper" match="any">
          <group delimiter=". ">
            <text macro="author-bib"/>
            <text macro="title-quoted"/>
            <group delimiter=" ">
              <text macro="container-italic"/>
              <text macro="volume-issue-year-pages"/>
            </group>
            <text macro="access"/>
          </group>
        </if>

        <else-if type="book chapter paper-conference report thesis" match="any">
          <group delimiter=". ">
            <text macro="author-bib"/>
            <text macro="title-quoted"/>
            <group>
              <text macro="container-italic"/>
              <text macro="publisher-place" prefix=". "/>
              <text macro="issued-year" prefix=", "/>
            </group>
            <text macro="access"/>
          </group>
        </else-if>

        <else-if type="webpage post post-weblog dataset manuscript preprint" match="any">
          <group delimiter=". ">
            <text macro="author-bib"/>
            <text macro="title-quoted"/>
            <text macro="container-italic"/>
            <text macro="issued-year"/>
            <text macro="access"/>
          </group>
        </else-if>

        <else>
          <group delimiter=". ">
            <text macro="author-bib"/>
            <text macro="title-quoted"/>
            <text macro="container-italic"/>
            <text macro="issued-year"/>
            <text macro="access"/>
          </group>
        </else>
      </choose>
    </layout>
  </bibliography>
</style>
